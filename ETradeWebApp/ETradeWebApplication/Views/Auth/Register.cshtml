@model AuthListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>New User Signup!</h2>
                    <form asp-action="Register" asp-controller="Auth">
                        <input type="text" placeholder="FirstName" asp-for="@Model.UserForRegisterDto.FirstName" />
                        <input type="text" placeholder="LastName" asp-for="@Model.UserForRegisterDto.LastName"/>
                        <input type="email" placeholder="Email Address" asp-for="@Model.UserForRegisterDto.Email"/>
                        <input type="password" placeholder="Password" asp-for="@Model.UserForRegisterDto.Password"/>
                        <button type="submit" class="btn btn-default">Signup</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->

@section Scripts{
    <script src="~/theme/eshopper/js/jquery.js"></script>
    <script src="~/theme/eshopper/js/price-range.js"></script>
    <script src="~/theme/eshopper/js/jquery.scrollUp.min.js"></script>
    <script src="~/theme/eshopper/js/bootstrap.min.js"></script>
    <script src="~/theme/eshopper/js/jquery.prettyPhoto.js"></script>
    <script src="~/theme/eshopper/js/main.js"></script>
}