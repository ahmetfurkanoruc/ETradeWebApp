@model AuthListViewModel

    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1">
                    <div class="login-form">
                        <!--login form-->
                        <h2>Login to your account</h2>
                        <form asp-action="Login" asp-controller="Auth">
                            <input type="email" placeholder="Email Address" asp-for="@Model.UserForLoginDto.Email" />
                            <input type="password" placeholder="Password" asp-for="@Model.UserForLoginDto.Password" />
                            <span>
                                <input type="checkbox" class="checkbox">
                                Keep me signed in
                            </span>
                            <button type="submit" class="btn btn-default">Login</button>
                            <a href="/auth/register" class="btn btn-default">Register</a>
                        </form>
                    </div><!--/login form-->
                </div>            
            </div>
        </div>
    </section><!--/form-->

    @section Scripts{
        <script src="~/theme/eshopper/js/jquery.js"></script>
        <script src="~/theme/eshopper/js/price-range.js"></script>
        <script src="~/theme/eshopper/js/jquery.scrollUp.min.js"></script>
        <script src="~/theme/eshopper/js/bootstrap.min.js"></script>
        <script src="~/theme/eshopper/js/jquery.prettyPhoto.js"></script>
        <script src="~/theme/eshopper/js/main.js"></script>
    }



